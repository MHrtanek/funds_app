<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Správa profilov"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCloseDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textSize="16sp"
            android:textColor="#666666"
            android:backgroundTint="#FFFFFF"
            android:minWidth="40dp"
            android:minHeight="40dp" />

    </LinearLayout>

    <!-- Current Profile -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktuálny profil:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvCurrentProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil 1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Add New Profile -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pridať nový profil:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNewProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Názov nového profilu"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnAddProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pridať profil"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="24dp" />

    <!-- Profiles List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existujúce profily:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProfiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- No Profiles Message -->
    <TextView
        android:id="@+id/tvNoProfilesMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Žiadne profily"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- Delete All Profiles Button -->
    <Button
        android:id="@+id/btnDeleteAllProfiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odstrániť všetky profily"
        android:textSize="16sp"
        android:textColor="#F44336"
        android:backgroundTint="#FFEBEE"
        android:layout_marginTop="16dp" />

</LinearLayout>
